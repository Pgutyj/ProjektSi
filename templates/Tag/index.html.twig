{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tag_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tag_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'tag.id')  }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.title'|trans, 'tag.tagInfo') }}</th>
                <th>{{ 'label.create'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
                <th>{{ 'label.editing'|trans }}</th>
                <th>{{ 'label.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for tag in pagination.items%}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.tagInfo }}</td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ url('tag_create') }}"  title="{{ 'action.create'|trans }}">
                            {{ 'action.create'|trans }}
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ url('tag_show', {slug: tag.slug}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-success" href="{{ url('tag_edit', {slug: tag.slug}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" href="{{ url('tag_delete', {slug: tag.slug}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}