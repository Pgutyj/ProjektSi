{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.book_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}


        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'book.id')  }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.title'|trans, 'book.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.description'|trans, 'book.description') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.book_creation_time'|trans, 'book.book_creation_time') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.price'|trans, 'book.price') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.name')  }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.actions'|trans, 'book.actions') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for book in pagination.items%}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.description }}</td>
                    <td>{{ book.book_creation_time|date('Y/m/d') }}</td>
                    <td>{{ book.price }}</td>
                    <td>{{ book.category.name }}</td>
                    <td>
                        <a href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}