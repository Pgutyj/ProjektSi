{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_details'|trans({'%id%': book.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.book_details'|trans({'%id%': book.id|default('')}) }}</h1>
    {% if book is defined and book|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ book.id }}</dd>
            <dt>{{ 'label.BookCreationTime'|trans }}</dt>
            <dd>{{ book.BookCreationTime|format_date('long') }}</dd>
            <dt>{{ 'label.AuthorInfo'|trans }}</dt>
            <dd>{{  book.AuthorInfo.name }}</dd>
            <dt>{{ 'label.PublishingHouseInfo'|trans }}</dt>
            <dd>{{  book.PublishingHouseInfo.name }}</dd>
            <dt>{{ 'label.description'|trans }}</dt>
            <dd>{{ book.description }}</dd>
            <dt>{{ 'label.price'|trans }}</dt>
            <dd>{{ book.price }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  book.title }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  book.category.name }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                {% if book.tags is defined and book.tags|length %}
                        {% for tag in book.tags %}
                            {{ tag.tagInfo }}
                        {% endfor %}
                    {% else %}
                        {{ 'label.notags'|trans }}
                    {% endif %}
            </dd>
        </dl>
        <p>
            <a href="{{ url('book_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}