{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'category.id')  }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.title'|trans, 'category.name') }}</th>
                <th>{{ 'label.create'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
                <th>{{ 'label.editing'|trans }}</th>
                <th>{{ 'label.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items%}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ url('category_create') }}" title="{{ 'action.create'|trans }}">
                            {{ 'action.create'|trans }}
                        </a>
                    </td>
                    <td>
                          <a href="{{ url('category_show',  {slug: category.slug})}}" title="{{ 'action.view'|trans }}" class="btn btn-outline-primary">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_edit', {slug: category.slug}) }}" title="{{ 'action.edit'|trans }}" class="btn btn-outline-success">
                            {{ 'action.edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_delete', {slug: category.slug}) }}" title="{{ 'action.delete'|trans }}" class="btn btn-outline-danger">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}