{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}


        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'category.id')  }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.title'|trans, 'category.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.create'|trans, 'category.create') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.actions'|trans, 'category.actions') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.editing'|trans, 'category.editing') }}</th>
                <th>{{ knp_pagination_sortable(pagination,'label.delete'|trans, 'category.delete') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items%}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ url('category_create', {id: category.id}) }}" title="{{ 'action.create'|trans }}">
                            {{ 'action.create'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_show', {id: category.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'action.edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'action.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}