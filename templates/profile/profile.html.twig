{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.profile_details'|trans({'%id%': app.user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.profile_details'|trans({'%id%': app.user.id|default('')}) }}</h1>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.email'|trans }}</dt>
            <dd>{{ app.user.email}}</dd>
            <dt>{{ 'label.nick'|trans }}</dt>
            <dd>{{ app.user.nick }}</dd>
            </dd>
        </dl>
        <p>
            <a href="{{ url('profile_edit', {id: app.user.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('book_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% endif %}
{% endblock %}